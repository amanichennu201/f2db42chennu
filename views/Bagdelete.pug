extends layout 
 
block content 
  h1= title 
    - let Bagid = toShow._id 
    - let Bag_type = toShow.Bag_type
    - let Bag_cost = toShow.cost
    - let Bag_Name = toShow.Bag_Name
    - let actionid = "/resource/Bags/" + Bagid 
    script let actionid = "#{actionid}" 
    div 
      div.row
       div(class='BagAttr mr-3') Bag ID is:
       div #{Bagid}
      div.row
       div(class='BagAttr mr-3') Bag type is:
       div #{Bag_type}
      div.row
       div(class='BagAttr mr-3') Bag Cost is:
       div #{Bag_cost}
      div.row
       div(class='BagAttr mr-3') Bag Name is:
       div #{Bag_Name}
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for theBag collection 
      window.location.href='/Bag' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'     
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href=Bag' 
        // TODO handle body 
      }).catch((error) => { 
        console.log(error);
        alert("Delete failed " + error ) 
      }); 
    } 